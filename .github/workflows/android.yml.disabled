name: CI/CD

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up JDK
      uses: actions/setup-java@v2
      with:
        distribution: 'adopt'
        java-version: '18'

    - name: Build with Gradle
      run: ./gradlew build

  deploy:
    runs-on: ubuntu-latest

    needs: build

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up JDK
      uses: actions/setup-java@v2
      with:
        distribution: 'adopt'
        java-version: '18'

    - name: Deploy to GitHub Releases
      uses: softprops/action-gh-release@v1
      with:
        files: app/build/outputs/**/*.apk
        token: ${{ secrets.GITHUB_TOKEN }}
        tag_name: v0.9
        release_name: Release GorenganIndonesia
      env:
        JAVA_HOME: /opt/hostedtoolcache/Java_Adopt_jdk/18.0.2-101/x64
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
