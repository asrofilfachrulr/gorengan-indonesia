<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <style name="btn_outline_rounded">
        <item name="android:background">@drawable/btn_outline_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="btn_accent_light_rounded">
        <item name="android:background">@drawable/btn_accent_light</item>
        <item name="android:textColor">@color/app_accent</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>
    <style name="btn_accent_outline_rounded">
        <item name="android:background">@drawable/btn_accent_outline</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="highlighted_pager_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="unhighlighted_pager_title">
        <item name="android:textColor">#A1A9A9A9</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="btn_accent_solid_rounded">
        <item name="android:background">@drawable/btn_solid_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="btn_neutral_solid_rounded">
        <item name="android:background">@drawable/btn_solid_neutral</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="btn_white_round">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/rounded_white</item>
    </style>
    <style name="btn_transparent">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ImageViewBgGrey">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/rounded_grey</item>
    </style>
    <style name="BgRoundedAccent">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/rounded_accent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="BottomNavTextActive">
        <item name="android:textSize">12sp</item> <!-- Adjust the text size as needed -->
        <item name="android:textColor">@color/active_tab_color</item> <!-- Set the text color -->
    </style>
    <style name="BottomDialogMenuItem">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">16sp</item>
        <item name="android:drawablePadding">16sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>
    <style name="MainFragmentRoot">
        <item name="android:paddingTop">14sp</item>
        <item name="android:background">@color/bg_white_primary</item>
    </style>
    <style name="MainFragmentTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>
</resources>