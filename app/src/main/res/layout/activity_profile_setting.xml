<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    tools:context=".Activity.ProfileSettingActivity">
    <LinearLayout
        android:id="@+id/ll_top_profile_setting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_back_profile_setting"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="fitXY"
            android:rotation="180"
            android:src="@drawable/baseline_chevron_right_24"
            android:background="@android:color/transparent" />
        <TextView
            android:layout_marginStart="7sp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="500"
            android:textColor="@color/black"
            android:text="Pengaturan Profil"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_content_profile_setting"
        app:layout_constraintTop_toBottomOf="@id/ll_top_profile_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_content_profile_setting"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_name_error_profile_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C10E0E"
                android:text="Nama Tidak Valid"/>
            <EditText
                android:id="@+id/et_name_profile_setting"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:background="@android:drawable/editbox_background"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_email_error_profile_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C10E0E"
                android:text="Email Tidak Valid"/>
            <EditText
                android:id="@+id/et_email_profile_setting"
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:background="@android:drawable/editbox_background"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pengguna"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_username_error_profile_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C10E0E"
                android:text="Nama Pengguna Tidak Valid"/>
            <EditText
                android:id="@+id/et_username_profile_setting"
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:maxLines="1"
                android:background="@android:drawable/editbox_background"/>
            <TextView
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kata Sandi Baru"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_new_password_error_profile_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C10E0E"
                android:text="Kata Sandi Tidak Valid"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/et_new_password_profile_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:background="@android:drawable/editbox_background"/>
                <ImageButton
                    android:id="@+id/ib_toggle_new_password_profile_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="14dp"
                    style="@style/btn_transparent"
                    android:src="@drawable/baseline_remove_red_eye_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ulangi Kata Sandi"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/tv_repeat_new_password_error_profile_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C10E0E"
                android:text="Kata Sandi Tidak Valid"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">
                <EditText
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/et_repeat_new_password_profile_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:background="@android:drawable/editbox_background"/>
                <ImageButton
                    android:id="@+id/ib_repeat_toggle_new_password_profile_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="14dp"
                    style="@style/btn_transparent"
                    android:src="@drawable/baseline_remove_red_eye_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/vw_empty_space_profile_setting"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_reset_profile_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/btn_transparent"
            android:text="Reset"/>
        <Button
            android:id="@+id/btn_save_profile_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/BgRoundedAccent"
            android:text="Simpan"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>