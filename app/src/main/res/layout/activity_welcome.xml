<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/iv_hero"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="204dp"
        android:src="@drawable/gorengan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/welcome_banner"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_hero"/>

    <Button
        android:layout_margin="14dp"
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/btn_accent_solid_rounded"
        android:text="Masuk"/>
    <Button
        android:layout_margin="14dp"
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toTopOf="@id/btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/btn_neutral_solid_rounded"
        android:layout_marginBottom="14dp"
        android:text="Daftar"/>


</androidx.constraintlayout.widget.ConstraintLayout>