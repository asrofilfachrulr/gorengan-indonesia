<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Activity.CongratsActivity"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="410dp"
            android:layout_height="400dp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/congrats" />

        <TextView
            android:id="@+id/congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Selamat!"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:fontFamily="@font/lato_extra_bold" />

        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/congrats"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:text="Siap-siap jadi chef di rumah!\nTemukan resep istimewa di sini."
            android:textColor="#8D8D8D"
            android:textSize="14sp"
            android:fontFamily="@font/lato_semibold"
            android:gravity="center" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Mulai"
            android:textSize="16sp"
            style="@style/loginButton"
            android:layout_below="@id/tagline"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>