<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewRecipeActivity">

    <LinearLayout
        android:id="@+id/ll_root_loading_new_receipt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#74606077"
        android:gravity="center"
        android:orientation="vertical"
        android:translationZ="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="memuat..."
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/pb_new_receipt"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/MainFragmentRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_top_my_receipt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:translationZ="5dp"
            android:background="@color/bg_white_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/ib_back_new_receipt"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/new_receipt_title"
                style="@style/MainFragmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="Resep Baru" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:overScrollMode="always"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_top_my_receipt"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14sp"
                    android:backgroundTintMode="src_over"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/bg_white_secondary"
                        android:minHeight="200dp"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Informasi Resep"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14sp"
                            android:text="Judul"
                            android:textColor="@android:color/primary_text_light" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10sp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:clickable="true"
                            android:inputType="text"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14sp"
                            android:text="Kategori"
                            android:textColor="@android:color/primary_text_light" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10sp"
                            android:entries="@array/categories" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14sp"
                            android:text="Unggah Gambar"
                            android:textColor="@android:color/primary_text_light" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="5sp">

                            <Button
                                android:id="@+id/btn_pick_img_new_receipt"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:clickable="true"
                                android:drawableStart="@drawable/ic_img_outline_dark"
                                android:drawablePadding="7dp"
                                android:text="Pilih Gambar"
                                android:textAllCaps="false" />

                            <TextView
                                android:id="@+id/tv_image_file_name_new_receipt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="7sp"
                                android:text="file-name.jpg"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14sp"
                            android:text="Level Kesukaran"
                            android:textColor="@android:color/primary_text_light" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10sp"
                            android:clickable="true"
                            android:entries="@array/difficulties"
                            android:inputType="text" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14sp"
                            android:text="Estimasi Durasi Pembuatan"
                            android:textColor="@android:color/primary_text_light" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="10sp"
                            android:background="@android:drawable/editbox_background_normal"
                            android:clickable="true"
                            android:hint="40 (menit)"
                            android:inputType="number"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18sp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Bahan-Bahan"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14sp"
                            android:text="Tambah Bahan"
                            android:textColor="@android:color/primary_text_light" />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_add_ingredient_new_recipe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/new_recipe_ingredient_item"/>

                        <Button
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground"
                            android:id="@+id/btn_new_field_new_ingredient_new_recipe"
                            android:background="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="7sp"
                            android:text="+ Tambah"
                            android:textAllCaps="false"
                            android:textColor="@color/dark_grey"
                            android:paddingHorizontal="14dp"
                            android:textAlignment="textEnd" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18sp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="Langkah-Langkah"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14sp"
                            android:text="Tambah Langkah"
                            android:textColor="@android:color/primary_text_light" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_add_step_new_recipe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:itemCount="4"
                            tools:listitem="@layout/new_recipe_step_item"/>

                        <Button
                            android:id="@+id/btn_new_field_new_step_new_recipe"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:background="@android:color/transparent"
                            android:paddingHorizontal="14sp"
                            android:textAllCaps="false"
                            android:textColor="@color/dark_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="7sp"
                            android:text="+ Tambah"
                            android:textAlignment="textEnd" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="64dp"
                            android:layout_marginBottom="14dp"
                            android:orientation="horizontal">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:text="batal" />

                            <Button
                                style="@style/btn_accent_solid_rounded"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="7dp"
                                android:layout_weight="1"
                                android:text="simpan" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>