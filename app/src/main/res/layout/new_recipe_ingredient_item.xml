<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:layout_marginTop="10sp"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/et_qty_new_ingredient_new_recipe"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="qty"
        android:inputType="numberDecimal"
        android:layout_height="match_parent"
        android:layout_weight="16"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_unit_new_ingredient_new_recipe"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="unit"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_weight="14"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_name_new_ingredient_new_recipe"
        android:background="@android:drawable/editbox_background_normal"
        android:hint="nama bahan"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:maxLines="3"
        android:scrollbars="vertical"
        android:layout_marginStart="4dp"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/ib_delete_new_ingredient_new_recipe"
        android:background="@android:color/transparent"
        android:layout_height="32dp"
        android:layout_width="32dp"
        android:src="@drawable/ic_trashbin_outline_black" />
</LinearLayout>
